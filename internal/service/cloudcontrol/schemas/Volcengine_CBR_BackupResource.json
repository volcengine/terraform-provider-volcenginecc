{
  "additionalProperties": false,
  "createOnlyProperties": [
    "/properties/InstanceId",
    "/properties/InstanceName",
    "/properties/MetaInformation",
    "/properties/ResourceType"
  ],
  "definitions": {
    "MetaInformation": {
      "description": "资源的meta信息(创建备份计划时，用于存储额外的配置)ECS 整机备份参数：见 EcsBackupConfiguration 结构体。vePFS 备份参数：见 VePFSBackupConfiguration 结构体。",
      "properties": {
        "EcsMeta": {
          "description": "ECS 的元数据，是一个 JSON string。格式见数据结构的 EcsBackupConfiguration 结构体。",
          "type": "string"
        },
        "VepfsMeta": {
          "description": "vePFS 备份源元数据，是一个 JSON string。格式见数据结构的VePFSBackupConfiguration 结构体。",
          "type": "string"
        }
      },
      "type": "object"
    },
    "Plan": {
      "description": "备份计划信息",
      "properties": {
        "PlanId": {
          "description": "备份计划 ID",
          "type": "string"
        },
        "PlanName": {
          "description": "备份计划名称",
          "type": "string"
        }
      },
      "type": "object"
    }
  },
  "description": "指备份对象，是云备份操作的起点。它可以是备份源产品中的计算资源、服务实例或者一组协同工作的服务和资源的集合，例如 ECS 整机、云盘、对象存储 Bucket。",
  "filterProperties": {
    "filterableProperties": [
      "/properties/ResourceId",
      "/properties/ResourceType",
      "/properties/AccountId",
      "/properties/Status",
      "/properties/InstanceId"
    ]
  },
  "handlers": {
    "create": {
      "permissions": [
        "cbr:CreateBackupResource",
        "cbr:DescribeBackupResources"
      ]
    },
    "delete": {
      "permissions": [
        "cbr:DeleteBackupResource",
        "cbr:DescribeBackupResources"
      ]
    },
    "list": {
      "permissions": [
        "cbr:DescribeBackupResources"
      ]
    },
    "read": {
      "permissions": [
        "cbr:DescribeBackupResources"
      ]
    }
  },
  "primaryIdentifier": [
    "/properties/ResourceId"
  ],
  "properties": {
    "AccountId": {
      "description": "创建此备份源的账户 ID。",
      "type": "string"
    },
    "CreatedTime": {
      "description": "创建时间。",
      "semantic": "createdTime",
      "type": "string"
    },
    "InstanceId": {
      "description": "实例 ID。",
      "type": "string"
    },
    "InstanceName": {
      "description": "实例名称。",
      "type": "string"
    },
    "MetaInformation": {
      "$ref": "#/definitions/MetaInformation",
      "description": "资源的meta信息(创建备份计划时，用于存储额外的配置)ECS 整机备份参数：见 EcsBackupConfiguration 结构体。vePFS 备份参数：见 VePFSBackupConfiguration 结构体。",
      "type": "object"
    },
    "Plans": {
      "description": "关联的备份计划列表。",
      "insertionOrder": false,
      "items": {
        "$ref": "#/definitions/Plan"
      },
      "type": "array",
      "uniqueItems": true
    },
    "RecoveryPointNumber": {
      "description": "恢复点的数量",
      "type": "integer"
    },
    "ResourceId": {
      "description": "备份源 ID。",
      "semantic": "resourceId",
      "type": "string"
    },
    "ResourceType": {
      "description": "备份源类型，取值说明如下：ECS：ECS 整机。vePFS：vePFS 文件系统。",
      "enum": [
        "ECS",
        "vePFS"
      ],
      "type": "string"
    },
    "Status": {
      "description": "备份源状态。可能的值为：AVAILABLE、REMOVING、BEING_BACKED_UP、RECOVERING、CREATING、ERROR、UNAVAILABLE。",
      "semantic": "status",
      "type": "string"
    },
    "UpdatedTime": {
      "description": "更新时间",
      "semantic": "updatedTime",
      "type": "string"
    },
    "UsedCapacityInBytes": {
      "description": "已经备份的字节数。",
      "type": "integer"
    }
